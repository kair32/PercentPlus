<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.procentplus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.procentplus.activities.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.procentplus.activities.ObjectsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.procentplus.legend.LegendActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.procentplus.activities.AuthActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.procentplus.activities.BonusActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.procentplus.activities.RestorePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityCalculate"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.procentplus.activities.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.procentplus.activities.ConfirmEmailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation"
            android:stateNotNeeded="true">
            <intent-filter>
                <action android:name="com.google.zxing.client.android.SCAN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>